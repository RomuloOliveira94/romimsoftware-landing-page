---
import { Icon } from "astro-icon/components";

const features = [
  {
    icon: "features/icon-01",
    title: "Free and Open-Source",
    ref: "javascript:void(0)",
    refTitle: "Learn More",
    description:
      "Lorem Ipsum is simply dummy text of the printing and industry.",
  },
  {
    icon: "features/icon-02",
    title: "Multipurpose Template",
    ref: "javascript:void(0)",
    refTitle: "Learn More",
    description:
      "Lorem Ipsum is simply dummy text of the printing and industry.",
  },
  {
    icon: "features/icon-03",
    title: "High-quality Design",
    ref: "javascript:void(0)",
    refTitle: "Learn More",
    description:
      "Lorem Ipsum is simply dummy text of the printing and industry.",
  },
  {
    icon: "features/icon-04",
    title: "All Essential Elements",
    ref: "javascript:void(0)",
    refTitle: "Learn More",
    description:
      "Lorem Ipsum is simply dummy text of the printing and industry.",
  },
];
---

<!-- ====== Features Section Start -->
<section class="pt-20 pb-8 lg:pt-[120px] lg:pb-[70px] dark:bg-dark">
  <div class="container bg-white">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <div class="mb-12 mx-auto max-w-[485px] lg:mb-[70px] text-center">
          <span class="mb-2 block text-xl font-semibold text-seconday">
            Serviços
          </span>
          <h2
            class="mb-3 text-3xl font-bold text-dark dark:text-white sm:text-4xl md:text-[40px] md:leading-[1.2]"
          >
            Principais serviços que oferecemos
          </h2>
          <p class="text-base text-body-color dark:text-dark-6">
            Trabalhamos desde a criação de sites, até a criação de sistemas
            completos, com as mais diversas tecnologias.
          </p>
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap">
      {
        features.map((feature) => (
          <div class="w-full px-4 md:w-1/2 lg:w-1/4">
            <div class="wow fadeInUp group mb-12">
              <div class="relative z-10 mb-10 flex h-[70px] w-[70px] items-center justify-center rounded-[14px] bg-primary">
                <span class="absolute top-0 left-0 -z-[1] mb-8 flex h-[70px] w-[70px] rotate-[25deg] items-center justify-center rounded-[14px] bg-secondary bg-opacity-10 duration-300 group-hover:rotate-45" />
                <Icon name={feature.icon} class="text-3xl text-black" />
              </div>
              <h4 class="mb-3 text-xl font-bold text-dark dark:text-white">
                {feature.title}
              </h4>
              <p class="mb-8 text-body-color dark:text-dark-6 lg:mb-9">
                {feature.description}
              </p>
              <a
                href={feature.ref}
                class="text-base font-medium text-dark dark:text-white hover:text-primary dark:hover:text-primary"
              >
                {feature.refTitle}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<!-- ====== Features Section End -->
